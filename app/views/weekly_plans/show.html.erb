<!-- Nav tabs -->
<ul class="nav nav-tabs nav-justified">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#panel1" role="tab">Weekly Plan</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#panel2" role="tab">Tasks</a>
    </li>
</ul>
<!-- Tab panels -->
<div class="tab-content card">
    <!--Panel 1-->
    <div class="tab-pane fade in show active" id="panel1" role="tabpanel">
        <br>
        <p>
          <strong>Plan title:</strong>
          <%= @weekly_plan.plan_title %>
        </p>
    </div>
    <!--/.Panel 1-->
    <!--Panel 2-->
    <div class="tab-pane fade" id="panel2" role="tabpanel">
        <br>
            <table class="table table-striped table-bordered table-responsive-md" cellspacing="0" width="100%">
              <thead>
              <tr>
                <th>Task</th>
                <th>Due Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @weekly_plan.tasks.each do |task| %>
                <tr>
                  <td><%= task.name %></td>
                  <td><%= task.due_date.strftime('%a, %d %b %Y') %></td>
                  <td><%= task.task_status %></td>
                </tr>
            <% end %>
            </tbody>
            </table>
         
    </div>
    <!--/.Panel 2-->
</div>

<%= link_to 'Edit', edit_weekly_plan_path(@weekly_plan), class: 'btn btn-info' %> |
<%= link_to 'Back', weekly_plans_path, class: 'btn btn-info' %>

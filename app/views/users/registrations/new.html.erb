
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
<div class="card mx-xl-5">
    <div class="card-body">
        <div class="form-header deep-blue-gradient rounded">
         <h3><i class="fa fa-lock"></i> Sign Up:</h3>
        </div>

        <div class="md-form font-weight-light">
         <%= f.input :email, required: true, autofocus: true %>
        </div>
        
        <div class="md-form font-weight-light">
         <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>

        <div class="md-form font-weight-light">
         <%= f.input :password_confirmation, required: true %>
        </div>
      
        <div class="text-center mt-4">
          <div class="form-actions">
            <%= f.button :submit, "Sign Up", class: "btn btn-light-blue waves-effect waves-light" %>
          </div>
        </div>

        <div class="modal-footer">
          <div class="options font-weight-light">
            <%= render "users/shared/links" %>
          </div>
        </div>
    </div>
</div>

<% end %>

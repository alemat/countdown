
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
<div class="card mx-xl-5">
    <div class="card-body">
        <div class="form-header deep-blue-gradient rounded">
         <h3><i class="fa fa-lock"></i> Forgot your password? </h3>
        </div>
        <div class="md-form font-weight-light">
          <%= f.input :email, required: true, autofocus: true %>
        </div>

        <div class="text-center mt-4">
          <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: "btn btn-light-blue waves-effect waves-light" %>
         </div>
         <%= render "users/shared/links" %>
        </div>
    </div>
</div>
<% end %>


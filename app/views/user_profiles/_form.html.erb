
<%= simple_form_for(@user_profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :first_name %>
    <%= f.input :father_name %>
    <%= f.input :grand_father_name %>
    <%= f.input :profession_title %>
    <%= f.association :directorate %>
    <%= f.input :role %>
    <%= f.input :cv %>
    <%= f.input :upload_picture %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
